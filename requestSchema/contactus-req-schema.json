{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Contact Us Request Schema",
  "type": "object",
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "message": {
          "type": "string"
        }
      },
      "required": ["firstname", "lastname", "email", "message"]
    }
  },
  "required": ["data"]
}
